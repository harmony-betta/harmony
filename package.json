{
    "name": "harmony-framework",
    "version": "1.0.0",
    "description": "PHP Framework build in under Slim & Symfony",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "dev": "concurrently \"npm run serve-php\" \"npm run serve-tailwind\"",
        "serve-php": "cross-env PHP_SERVER=true php -S localhost:8081 -t public",
        "serve-tailwind": "npx tailwindcss -o public/assets/css/styles.css --minify --watch"
    },
    "keywords": [
        "PHP",
        "Framework",
        "MVC",
        "Slim",
        "Symfoni",
        "Twig",
        "Betta",
        "Dev",
        "Indonesia"
    ],
    "author": "Imam Ali Mustofa <darkterminal@duck.com> (https://github.com/darkterminal)",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.1",
        "cross-env": "^7.0.3"
    },
    "dependencies": {
        "autoprefixer": "^10.4.15",
        "postcss": "^8.4.28",
        "tailwindcss": "^3.3.3"
    }
}
